@model IEnumerable<string>
<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" class="btn btn-outline-primary">Home</a>
    @foreach (string category in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@category" class="@(ViewBag.SelectedCategory == category ? "btn btn-primary" : "btn btn-outline-primary")">@category</a>
    }
</div>