@model BooksViewModel
<div class="alert alert-success">
    <h5>Please buy our books! We have plenty for you to choose from</h5>
</div>

@foreach(Books book in Model.Books)
{
    <partial name="BookSummary" model="book"/>
}

<div page-changer="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>